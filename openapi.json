{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0",
    "title": "Devops Monitor API",
    "description": "API to backend server"
  },
  "servers": [
    {
      "url": "{apiRoot}/services",
      "variables": {
        "apiRoot": {
          "default": "https://api.devops.codex.so"
        }
      }
    }
  ],
  "paths": {
    "/services": {
      "post": {
        "summary": "Deliver server data",
        "operationId": "pushData",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ServerData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ServerData": {
        "type": "object",
        "properties": {
          "hostname": {
            "type": "string"
          },
          "project_token": {
            "type": "string"
          },
          "websites": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string"
              },
              "sites": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "status",
              "sites"
            ]
          }
        }
      }
    }
  }
}